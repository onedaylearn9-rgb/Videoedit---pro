    <script>
        // DOM Elements
        const startSlider = document.getElementById('startSlider');
        const endSlider = document.getElementById('endSlider');
        const startTimeValue = document.getElementById('startTimeValue');
        const endTimeValue = document.getElementById('endTimeValue');
        const durationValue = document.getElementById('durationValue');
        const previewSegment = document.getElementById('previewSegment');
        const videoPreview = document.getElementById('videoPreview');
        const startIndicator = document.getElementById('startIndicator');
        const endIndicator = document.getElementById('endIndicator');
        
        const previewBtn = document.getElementById('previewBtn');
        const applyBtn = document.getElementById('applyBtn');
        const outputSection = document.getElementById('outputSection');
        const closeOutput = document.getElementById('closeOutput');
        const resultDuration = document.getElementById('resultDuration');
        const timeSaved = document.getElementById('timeSaved');
        const sizeReduction = document.getElementById('sizeReduction');
        const downloadBtn = document.getElementById('downloadBtn');
        const newCutBtn = document.getElementById('newCutBtn');
        
        // Format time function (seconds to HH:MM:SS)
        function formatTime(seconds) {
            const hrs = Math.floor(seconds / 3600);
            const mins = Math.floor((seconds % 3600) / 60);
            const secs = seconds % 60;
            
            return `${hrs.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }
        
        // Format time for display (MM:SS)
        function formatShortTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = seconds % 60;
            return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }
        
        // Update all displays based on slider values
        function updateDisplays() {
            const startTime = parseInt(startSlider.value);
            const endTime = parseInt(endSlider.value);
            
            // Update time displays
            startTimeValue.textContent = formatTime(startTime);
            endTimeValue.textContent = formatTime(endTime);
            
            // Calculate and update duration
            const duration = endTime - startTime;
            durationValue.textContent = formatTime(duration);
            
            // Update preview segment
            previewSegment.textContent = `${formatShortTime(startTime)} - ${formatShortTime(endTime)}`;
            
            // Update trim indicators position (percentage)
            const maxTime = parseInt(endSlider.max);
            const startPercent = (startTime / maxTime) * 100;
            const endPercent = (endTime / maxTime) * 100;
            
            startIndicator.style.left = `${startPercent}%`;
            endIndicator.style.left = `${endPercent}%`;
            
            // Update preview area
            updatePreviewArea(startTime, endTime, duration);
        }
        
        // Update preview area visualization
        function updatePreviewArea(startTime, endTime, duration) {
            const maxTime = parseInt(endSlider.max);
            
            // Update preview icon color based on cut duration
            const previewIcon = videoPreview.querySelector('.preview-icon i');
            if (duration < 30) {
                previewIcon.style.color = '#ef4444'; // Red for very short cuts
            } else if (duration < 120) {
                previewIcon.style.color = '#f59e0b'; // Orange for short cuts
            } else {
                previewIcon.style.color = '#10b981'; // Green for longer cuts
            }
            
            // Update preview text
            const previewText = videoPreview.querySelector('.preview-text');
            previewText.innerHTML = `
                <p><strong>Original Video:</strong> 00:00:00 - 05:00:00</p>
                <p><strong>Trimmed Segment:</strong> ${formatShortTime(startTime)} - ${formatShortTime(endTime)}</p>
                <p><strong>Duration:</strong> ${formatShortTime(duration)}</p>
                <p style="margin-top: 15px; font-size: 14px;">${getCutMessage(duration)}</p>
            `;
        }
        
        // Get message based on cut duration
        function getCutMessage(duration) {
            if (duration < 10) {
                return "Very short clip selected";
            } else if (duration < 30) {
                return "Short clip selected - ideal for social media";
            } else if (duration < 120) {
                return "Medium clip selected - good for highlights";
            } else {
                return "Long clip selected - perfect for full segments";
            }
        }
        
        // Initialize sliders
        function initializeSliders() {
            // Set initial values
            startSlider.value = 0;
            endSlider.value = 300; // 5 minutes in seconds
            
            // Update displays
            updateDisplays();
            
            // Add event listeners
            startSlider.addEventListener('input', function() {
                // Ensure start time doesn't exceed end time
                if (parseInt(this.value) >= parseInt(endSlider.value)) {
                    this.value = parseInt(endSlider.value) - 1;
                }
                updateDisplays();
            });
            
            endSlider.addEventListener('input', function() {
                // Ensure end time doesn't go below start time
                if (parseInt(this.value) <= parseInt(startSlider.value)) {
                    this.value = parseInt(startSlider.value) + 1;
                }
                updateDisplays();
            });
        }
        
        // Preview button handler
        previewBtn.addEventListener('click', function() {
            const startTime = parseInt(startSlider.value);
            const endTime = parseInt(endSlider.value);
            const duration = endTime - startTime;
            
            // Show preview message
            const message = `Previewing cut from ${formatShortTime(startTime)} to ${formatShortTime(endTime)} (${formatShortTime(duration)} duration)`;
            
            // Visual feedback
            this.innerHTML = '<i class="fas fa-spinner fa-spin btn-icon"></i> Previewing...';
            this.style.background = 'linear-gradient(90deg, #f59e0b, #fbbf24)';
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-eye btn-icon"></i> Preview Cut';
                this.style.background = '';
                
                // Show preview in output
                alert(`Preview Ready!\n\n${message}\n\nClick "Apply Cut" to save these changes.`);
            }, 1000);
        });
        
        // Apply button handler
        applyBtn.addEventListener('click', function() {
            const startTime = parseInt(startSlider.value);
            const endTime = parseInt(endSlider.value);
            const duration = endTime - startTime;
            const originalDuration = 300; // 5 minutes in seconds
            
            // Calculate results
            const timeSavedValue = originalDuration - duration;
            const reductionPercentage = Math.round((timeSavedValue / originalDuration) * 100);
            
            // Update output section
            resultDuration.textContent = formatTime(duration);
            timeSaved.textContent = formatTime(timeSavedValue);
            sizeReduction.textContent = `${reductionPercentage}%`;
            
            // Show output section
            outputSection.classList.add('active');
            
            // Scroll to output
            outputSection.scrollIntoView({ behavior: 'smooth' });
            
            // Visual feedback
            this.innerHTML = '<i class="fas fa-check-circle btn-icon"></i> Cut Applied!';
            this.style.background = 'linear-gradient(90deg, #10b981, #34d399)';
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-check-circle btn-icon"></i> Apply Cut';
                this.style.background = '';
            }, 2000);
        });
        
        // Close output section
        closeOutput.addEventListener('click', function() {
            outputSection.classList.remove('active');
        });
        
        // Download button handler
        downloadBtn.addEventListener('click', function() {
            this.innerHTML = '<i class="fas fa-spinner fa-spin btn-icon"></i> Preparing Download...';
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-download btn-icon"></i> Download Trimmed Video';
                alert('Download started! Your trimmed video file is being saved.');
                
                // In a real app, this would trigger an actual download
                // For demo purposes, we'll just show a message
                console.log('Video download triggered for trimmed segment');
            }, 1500);
        });
        
        // New cut button handler
        newCutBtn.addEventListener('click', function() {
            // Reset sliders to default
            startSlider.value = 0;
            endSlider.value = 300;
            
            // Update displays
            updateDisplays();
            
            // Hide output section
            outputSection.classList.remove('active');
            
            // Show confirmation
            this.innerHTML = '<i class="fas fa-check btn-icon"></i> Reset Complete!';
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-redo btn-icon"></i> Start New Cut';
            }, 1500);
        });
        
        // Initialize the tool when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeSliders();
            console.log('Small Cutting Tool initialized');
        });
    </script>
</body>
</html>
