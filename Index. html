        // DOM Elements
        const featureBoxes = document.querySelectorAll('.feature-box');
        const useButtons = document.querySelectorAll('.use-button');
        const featureOutput = document.getElementById('featureOutput');
        const outputTitle = document.getElementById('outputTitle');
        const outputContent = document.getElementById('outputContent');
        const closeOutput = document.getElementById('closeOutput');
        const upgradeButton = document.getElementById('upgradeButton');
        
        // Initialize sliders and effect buttons
        function initializeToolInteractions() {
            // Start time slider for cutting tool
            const startSlider = document.getElementById('startSlider');
            const startTime = document.getElementById('startTime');
            if (startSlider) {
                startSlider.addEventListener('input', function() {
                    const minutes = Math.floor(this.value / 60);
                    const seconds = this.value % 60;
                    startTime.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                    
                    // Update preview text
                    const endSlider = document.getElementById('endSlider');
                    const endMinutes = Math.floor(endSlider.value / 60);
                    const endSeconds = endSlider.value % 60;
                    const previewArea = document.querySelector('.preview-area p');
                    if (previewArea) {
                        previewArea.textContent = `Video preview: ${minutes}:${seconds.toString().padStart(2, '0')} - ${endMinutes}:${endSeconds.toString().padStart(2, '0')}`;
                    }
                });
            }
            
            // End time slider for cutting tool
            const endSlider = document.getElementById('endSlider');
            const endTime = document.getElementById('endTime');
            if (endSlider) {
                endSlider.addEventListener('input', function() {
                    const minutes = Math.floor(this.value / 60);
                    const seconds = this.value % 60;
                    endTime.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                    
                    // Update preview text
                    const startSlider = document.getElementById('startSlider');
                    const startMinutes = Math.floor(startSlider.value / 60);
                    const startSeconds = startSlider.value % 60;
                    const previewArea = document.querySelector('.preview-area p');
                    if (previewArea) {
                        previewArea.textContent = `Video preview: ${startMinutes}:${startSeconds.toString().padStart(2, '0')} - ${minutes}:${seconds.toString().padStart(2, '0')}`;
                    }
                });
            }
            
            // Color grading sliders
            const brightnessSlider = document.getElementById('brightnessSlider');
            const brightnessValue = document.getElementById('brightnessValue');
            if (brightnessSlider) {
                brightnessSlider.addEventListener('input', function() {
                    brightnessValue.textContent = `${this.value}%`;
                });
            }
            
            const contrastSlider = document.getElementById('contrastSlider');
            const contrastValue = document.getElementById('contrastValue');
            if (contrastSlider) {
                contrastSlider.addEventListener('input', function() {
                    contrastValue.textContent = `${this.value}%`;
                });
            }
            
            const saturationSlider = document.getElementById('saturationSlider');
            const saturationValue = document.getElementById('saturationValue');
            if (saturationSlider) {
                saturationSlider.addEventListener('input', function() {
                    saturationValue.textContent = `${this.value}%`;
                });
            }
            
            // Effect duration slider
            const durationSlider = document.getElementById('durationSlider');
            const effectDuration = document.getElementById('effectDuration');
            if (durationSlider) {
                durationSlider.addEventListener('input', function() {
                    effectDuration.textContent = `${(this.value / 10).toFixed(1)}s`;
                });
            }
            
            // Color preset buttons
            const colorPresetButtons = document.querySelectorAll('[data-preset]');
            colorPresetButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    colorPresetButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Set slider values based on preset
                    const preset = this.getAttribute('data-preset');
                    if (preset === 'cinematic') {
                        if (brightnessSlider) brightnessSlider.value = 45;
                        if (contrastSlider) contrastSlider.value = 60;
                        if (saturationSlider) saturationSlider.value = 40;
                    } else if (preset === 'vivid') {
                        if (brightnessSlider) brightnessSlider.value = 55;
                        if (contrastSlider) contrastSlider.value = 50;
                        if (saturationSlider) saturationSlider.value = 80;
                    } else if (preset === 'bw') {
                        if (brightnessSlider) brightnessSlider.value = 50;
                        if (contrastSlider) contrastSlider.value = 60;
                        if (saturationSlider) saturationSlider.value = 0;
                    } else if (preset === 'warm') {
                        if (brightnessSlider) brightnessSlider.value = 55;
                        if (contrastSlider) contrastSlider.value = 50;
                        if (saturationSlider) saturationSlider.value = 60;
                    } else if (preset === 'cool') {
                        if (brightnessSlider) brightnessSlider.value = 50;
                        if (contrastSlider) contrastSlider.value = 55;
                        if (saturationSlider) saturationSlider.value = 50;
                    }
                    
                    // Update display values
                    if (brightnessSlider && brightnessValue) brightnessValue.textContent = `${brightnessSlider.value}%`;
                    if (contrastSlider && contrastValue) contrastValue.textContent = `${contrastSlider.value}%`;
                    if (saturationSlider && saturationValue) saturationValue.textContent = `${saturationSlider.value}%`;
                });
            });
            
            // Effect buttons
            const effectButtons = document.querySelectorAll('[data-effect]');
            effectButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    effectButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Update current effect display
                    const currentEffect = document.getElementById('currentEffect');
                    if (currentEffect) {
                        currentEffect.textContent = this.getAttribute('data-effect').charAt(0).toUpperCase() + this.getAttribute('data-effect').slice(1);
                    }
                });
            });
            
            // Apply buttons
            const applyCut = document.getElementById('applyCut');
            if (applyCut) {
                applyCut.addEventListener('click', function() {
                    alert('Cut applied successfully! Your video has been trimmed.');
                });
            }
            
            const applyColor = document.getElementById('applyColor');
            if (applyColor) {
                applyColor.addEventListener('click', function() {
                    alert('Color grade applied successfully!');
                });
            }
            
            const applyEffect = document.getElementById('applyEffect');
            if (applyEffect) {
                applyEffect.addEventListener('click', function() {
                    alert('Effect applied successfully!');
                });
            }
            
            const previewEffect = document.getElementById('previewEffect');
            if (previewEffect) {
                previewEffect.addEventListener('click', function() {
                    alert('Previewing the selected effect...');
                });
            }
        }
        
        // Function to open feature tool
        function openFeatureTool(featureKey) {
            if (featureData[featureKey]) {
                outputTitle.textContent = featureData[featureKey].title;
                outputContent.innerHTML = featureData[featureKey].content;
                featureOutput.classList.add('output-active');
                
                // Scroll to output area
                featureOutput.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                
                // Initialize tool interactions
                setTimeout(initializeToolInteractions, 100);
            }
        }
        
        // Event Listeners for feature boxes and buttons
        featureBoxes.forEach(box => {
            box.addEventListener('click', function(e) {
                // Don't trigger if clicked on the use button (handled separately)
                if (!e.target.closest('.use-button')) {
                    const featureId = this.id;
                    let featureKey = '';
                    
                    if (featureId === 'feature1') featureKey = 'cutting';
                    else if (featureId === 'feature2') featureKey = 'color';
                    else if (featureId === 'feature3') featureKey = 'effects';
                    
                    openFeatureTool(featureKey);
                }
            });
        });
        
        useButtons.forEach(button => {
            button.addEventListener('click', function() {
                const featureKey = this.getAttribute('data-feature');
                openFeatureTool(featureKey);
            });
        });
        
        // Close output area
        closeOutput.addEventListener('click', function() {
            featureOutput.classList.remove('output-active');
        });
        
        // Upgrade button alert
        upgradeButton.addEventListener('click', function() {
            alert('Redirecting to premium upgrade page...');
        });
        
        // Top ad button
        document.querySelector('.ad-button').addEventListener('click', function() {
            alert('Claiming your 50% discount... Redirecting to checkout.');
        });
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('VideoEdit Pro website loaded successfully!');
        });
    </script>
</body>
</html>
