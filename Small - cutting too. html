                <li>Click <strong>Apply Cut</strong> to save your trimmed video</li>
            </ul>
        </div>
        
        <!-- Main Tool Container -->
        <div class="tool-container">
            <!-- Controls Panel -->
            <div class="controls-panel">
                <h3 class="section-title"><i class="fas fa-sliders-h"></i> Cutting Controls</h3>
                
                <!-- Start Time Slider -->
                <div class="slider-group">
                    <div class="slider-label">
                        <span>Start Time</span>
                        <span class="slider-value" id="startTimeValue">00:00:00</span>
                    </div>
                    <input type="range" min="0" max="300" value="0" class="slider" id="startSlider">
                </div>
                
                <!-- End Time Slider -->
                <div class="slider-group">
                    <div class="slider-label">
                        <span>End Time</span>
                        <span class="slider-value" id="endTimeValue">00:05:00</span>
                    </div>
                    <input type="range" min="0" max="300" value="300" class="slider" id="endSlider">
                </div>
                
                <!-- Duration Display -->
                <div class="time-display">
                    <div>Selected Duration</div>
                    <span id="durationValue">00:05:00</span>
                </div>
                
                <!-- Trim Marks Visualization -->
                <div class="trim-marks">
                    <div class="trim-mark start-mark">
